<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background1"
    android:gravity="center"
    tools:context="com.example.coolcamera.MainActivity">

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        >
        <ImageButton
            android:id="@+id/main_carema"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/camera"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
        <ImageButton
            android:id="@+id/main_variation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/variation"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
        <ImageButton
            android:id="@+id/main_jigsaw"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/jisaw"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            />
        <ImageButton
            android:id="@+id/main_color_change"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/portrait"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>



</LinearLayout>
